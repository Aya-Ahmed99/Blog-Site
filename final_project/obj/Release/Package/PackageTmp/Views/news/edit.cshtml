@model news
@{
    ViewBag.Title = "edit";
}

@section style
{
    <link href="~/Content/addnews.css" rel="stylesheet" />
}

<div class="addnew">
    <div class="container">
        <h1 class="text-center">Edit News</h1>
        <form method="post" class="addnewform" enctype="multipart/form-data">
            @Html.HiddenFor(n=>n.id)
            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-2 lable">
                    @Html.LabelFor(n => n.title)
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(n => n.title, new { @class = "form-control"})
                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(n => n.title, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-2 lable">
                    @Html.LabelFor(n => n.bref)
                </div>
                <div class="col-md-3">
                    @Html.TextAreaFor(n => n.bref, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(n => n.bref, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-2 lable">
                    @Html.LabelFor(n => n.newdesc)
                </div>
                <div class="col-md-3">
                    @Html.TextAreaFor(n => n.newdesc, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(n => n.newdesc, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-2 lable">
                    @Html.LabelFor(n => n.photo)
                </div>
                <div class="col-md-2">
                    <input type="file" name="img" />
                </div>
                <div class="col-md-2">
                    <img class="img-responsive" width="100" height="100" src="~/attach/imgnews/@Model.photo" />
                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(n => n.photo, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-2 lable">
                    @Html.LabelFor(n => n.catid)
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(n => n.catid, (SelectList)ViewBag.cat, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(n => n.catid, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Edit" class="btn btn-primary btnadd" />
                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(n => n.title, null, new { @class = "text-danger" })
                </div>
            </div>

        </form>
    </div>
</div>


