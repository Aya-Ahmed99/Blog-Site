@model user
@{
    ViewBag.Title = "login";
}

@section style
{
    <link href="~/Content/login.css" rel="stylesheet" />
}

<div class="logback">
    <div class="over"></div>
    <div class="container log ">
        <h1 class="text-center">login</h1>
        <form method="post" class="logform ">
            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-3">
                    @Html.LabelFor(u => u.email)
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(u => u.email, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(u => u.email, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-3">
                    @Html.LabelFor(u => u.userpassword)
                </div>
                <div class="col-md-3">
                    @Html.PasswordFor(u => u.userpassword, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(u => u.userpassword, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">

                <div class="lable col-md-6">

                </div>
                <div class="in col-md-3 ">
                    <input type="submit" class="btn btn-info logbtn" value="Login" />
                </div>
                <div class="in col-md-3 text-danger">
                    @ViewBag.status
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
}
