@model user
@{
    ViewBag.Title = "profile";
}
@section style
{
    <link href="~/Content/profile.css" rel="stylesheet" />
}
<div class="prof">
    <div class="container dataprof">
        <h1 class="text-center lead">Your Profile</h1>
        <div class="row userdata">
            <div class="col-md-1 ">

            </div>
            <div class="col-md-4 data">
                <p><strong>UserName : </strong> @Model.username</p>
                <p><strong>E-Mail : </strong> @Model.email</p>
                <p><strong>Age : </strong> @Model.age</p>
                <p><strong>Address : </strong> @Model.useraddress</p>
            </div>
            <div class="col-md-1 ">

            </div>
            <div class="col-md-4">
                <img src="~/attach/@Model.photo" />
            </div>
            <div class="col-md-12 text-center action">
                @Html.ActionLink("Add News", "addnews", "news")
                @Html.ActionLink("Edit Profile", "editprofile", new { id = Model.id })

            </div>
        </div>

    </div>
</div>