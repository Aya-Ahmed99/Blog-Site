
@{
    ViewBag.Title = "About Us";
}
@section style
{
    <link href="~/Content/aboutus.css" rel="stylesheet" />
}
<div class="about">
    <div class="about-banner">

        <div class="overlay">
            <div class="text-center about-content">
                <h1>@ViewBag.Title</h1>
                <p>" We Will Tell You Some Information AboutUs And About Our WebSite."</p>
